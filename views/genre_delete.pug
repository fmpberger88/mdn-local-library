extends layout

block content

    h1 #{title}: #{genre.title}

    if book_instances.length

        p #[strong Delete the following book instances before attempting to delete this book.]
        div(style='margin-left:20px;margin-top:20px')
            h4 Book Instances
            dl
                each book in book_instances
                    dt
                        a(href=book.url) #{book.imprint}
                    dd #{book.status}

    else
        p Do you really want to delete this Genre?

        form(method='POST')
            div.form-group
                input#bookid.form-control(type='hidden', name='genreid', value=genre._id )

            button.btn.btn-danger(type='submit') Delete
