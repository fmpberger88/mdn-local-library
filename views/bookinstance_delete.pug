extends layout

block content
    h1 #{title}
    p #{book_instance.book.title} by #{book_instance.book.author.name}
    p #{book_instance.imprint}

    p Are you sure you want to delete this Book Instance?

    form(method='POST')
        input(type='hidden', name='bookinstanceid', value=book_instance.id)
        button.btn.btn-danger(type='submit') Delete

